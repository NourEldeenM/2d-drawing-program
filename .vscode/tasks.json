{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with MinGW",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o",
                "game.exe",
                "main.cpp",
                "-I", "C:\\raylib\\include", // adjust the path if you didn't install it in C:\raylib
                "-L", "C:\\raylib\\lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}