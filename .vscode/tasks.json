{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build with MinGW",
			"type": "shell",
			"command": "g++",
			"args": [
				"-w",
				"-o",
				"game.exe",
				"src/main.cpp",
				"src/ui/GUI.cpp",
				"src/algorithms/CircleDrawingAlgos/CircleCartesian.cpp",
				"src/algorithms/CircleDrawingAlgos/CircleMidPoint.cpp",
				"src/algorithms/CircleDrawingAlgos/CircleMidPointDDA.cpp",
				"src/algorithms/CircleDrawingAlgos/CircleMidPointDDAModified.cpp",
				"src/algorithms/CircleDrawingAlgos/CirclePoint.cpp",
				"src/algorithms/CircleDrawingAlgos/CirclePolar.cpp",
				"src/algorithms/CircleDrawingAlgos/CirclePolarIterative.cpp",

				"src/algorithms/EllipseDrawingAlgos/EllipseCartesianAlgorithm.cpp",
				"src/algorithms/EllipseDrawingAlgos/EllipseMidPointAlgorithm.cpp",
				"src/algorithms/EllipseDrawingAlgos/EllipseMidPointDDAAlgorithm.cpp",
				"src/algorithms/EllipseDrawingAlgos/EllipsePolar2Algorithm.cpp",
				"src/algorithms/EllipseDrawingAlgos/EllipsePolarAlgorithm.cpp",

