				"src/algorithms/LineDrawingAlgos/BresenhamLineAlgorithm.cpp",
				"src/algorithms/LineDrawingAlgos/DDALineAlgorithm.cpp",
				"src/algorithms/LineDrawingAlgos/ParametricLineAlgorithm.cpp",

				"src/algorithms/QuadAndCubicCurvesAlgos/BezierCurveAlgorithm.cpp",
				"src/algorithms/QuadAndCubicCurvesAlgos/CardinalSplineCurve.cpp",
				"src/algorithms/QuadAndCubicCurvesAlgos/HermiteCurveAlgorithm.cpp",
				"src/algorithms/QuadAndCubicCurvesAlgos/QuadraticCurveAlgorithm.cpp",

				"-I",
				"C:\\raylib\\include",
				"-L",
				"C:\\raylib\\lib",
				"-lraylib",
				"-lopengl32",
				"-lgdi32",
				"-lwinmm"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"]
		}
	]
}
